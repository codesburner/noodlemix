html
  head
    title NoodleMix
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=0.95, maximum-scale=0.95, minimum-scale=0.95', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-capable')
    meta(content='chrome=1', http-equiv='X-UA-Compatible')
    link(rel='shortcut icon', href='/images/favicon.png')
    link(rel='stylesheet', href='/stylesheets/main.css')

  body
    header
      h1 NoodleMix

      if session.email
        a(href='#', id='logout') Log out
      else
        form(method='post', action='/login', id='login-form')
          a(href='#', id='login') Log in
          input(type='hidden', name='bid_assertion', value='1')

    .wrapper
      block content
    #footer

    script(type='text/javascript')
      var currentUser = null;
    if session.email
      != '<script type="text/javascript">currentUser = "' + session.email + '";</script>'
    script(src='https://login.persona.org/include.js', type='text/javascript')
    script(src='/javascripts/require.js', data-main='/javascripts/main')
